include ../mixins/flash-msg

block styles
    
block links
    link(rel="stylesheet", href="/static/css/store.css")

block content
    if messages.error 
        +flashMsg("error", messages.error)
    if messages.info
        +flashMsg("info", messages.info)
    if messages.success
        +flashMsg("success", messages.success)
    
    .store-section-container 
        .store-section-title
